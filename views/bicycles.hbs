<h1 class="center-align">Велосипеды</h1>
{{#if bicycles.length}}
{{#each bicycles}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-image">
        <img src="{{img}}" alt={{title}}>

        <a 
          class="btn-floating halfway-fab waves-effect waves-light red" 
          href="/bicycles/{{id}}/edit?allow=true" 
          style="margin-right: 100px;"
        >
          <i class="material-icons">edit</i>
        </a>
        <a 
          class="btn-floating halfway-fab waves-effect waves-light red" 
          href="/bicycles/{{id}}" 
          target="_blank"
          style="margin-right: 50px;"
        >
          <i class="material-icons">open_in_new</i>
        </a>
        <form action="/card/add" method="POST">
          <input type="hidden" name="id" value={{id}}>
          <button type="submit" class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add_shopping_cart</i></button>
        </form>
      </div>
      <div class="card-content">
        <span class="card-title">{{title}}</span>
        <p class="price">{{price}}</p>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<p>Велосипедов пока что нет</p>
{{/if}}