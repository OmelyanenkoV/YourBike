{{#if bicycles.length}}
{{#each bicycles}}
<div class="row">
    <div class="col s6 offset-s3">
      <div class="card">
        <div class="card-image">
          <img src="{{img}}" alt={{title}}>
          
          <a class="btn-floating halfway-fab waves-effect waves-light red" href="/courses/{{id}}"><i class="material-icons">open_in_new</i></a>
        </div>
        <div class="card-content">
            <span class="card-title">{{title}}</span>
          <p class="price">{{price}}</p>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
{{else}}
<p>Велосипедов пока что нет</p>
{{/if}}